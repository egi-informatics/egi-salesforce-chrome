{
  "name": "EGI Salesforce Features",
  "version": "1.3",
  "description": "Adds additional features to Salesforce.",
  "icons": {
    "128": "images/icon.png",
    "48": "images/icon.png",
    "16": "images/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.salesforce.com/01tj*"],
      "js": ["js/sponsors.js"]
    },
    {
      "matches": ["https://*.salesforce.com/001j*", "https://*.salesforce.com/003j*"],
      "js": ["js/accounts.js"]
    },
    {
      "matches": ["https://*.salesforce.com/003j*"],
      "js": ["js/contacts.js"]
    }
  ],
  "browser_action": {
    "default_icon": "images/icon-48.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
