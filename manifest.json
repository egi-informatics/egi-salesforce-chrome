{
  "name": "EGI Salesforce Features",
  "version": "0.8",
  "description": "Adds additional features to Salesforce.",
  "icons": {
    "128": "images/icon.png",
    "48": "images/icon.png",
    "16": "images/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.salesforce.com/01tj*"],
      "js": ["script.js"]
    }
  ],
  "browser_action": {
    "default_icon": "images/icon-48.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
